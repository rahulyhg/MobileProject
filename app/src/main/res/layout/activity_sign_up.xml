<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".SignUp.SignUpActivity">
    <ImageView
        android:alpha="0.5"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:src="@mipmap/mero_sathi"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageView
        android:layout_marginTop="110dp"
        android:layout_marginRight="90dp"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:src="@mipmap/pp_boy_png"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <ImageView
        android:alpha="0.2"
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/photo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="40dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tour_text"
            android:src="@mipmap/logo_namaste_nepal" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tour_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="none"
            android:text="@string/tour_text" />

        <Button
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/start_Button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textAllCaps="false" />
        <ImageView
            android:alpha="0.8"
            android:src="@mipmap/chautari"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </RelativeLayout>
</RelativeLayout>