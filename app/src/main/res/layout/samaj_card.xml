<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/samaj_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/most_discussed" />

            <TextView
                android:id="@+id/samaj_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/samaj_icon"
                android:text="Women Room "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/number_subscriber_samaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:text="33 subscriber"
                android:textSize="16sp" />
            <TextView
                android:layout_below="@id/samaj_name"
                android:paddingBottom="5dp"
                android:text="Description"
                android:layout_toRightOf="@id/samaj_icon"
                android:id="@+id/description_samaj_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>