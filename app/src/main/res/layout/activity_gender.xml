<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="40dp"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".SignUp.GenderSignUpActivity">
    <TextView
        android:id="@+id/qns"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Select Your Gender"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/male_radio"
        android:layout_marginTop="20dp"
        android:layout_below="@id/qns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_male"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@id/qns"
        android:layout_toRightOf="@id/male_radio"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_male"
        android:layout_alignParentRight="true"
        android:layout_below="@id/qns"
        android:src="@mipmap/pp_boy_png"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <RadioButton
        android:id="@+id/female_radio"
        android:layout_marginTop="20dp"
        android:layout_below="@id/male_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_female"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text_male"
        android:layout_toRightOf="@id/male_radio"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView

        android:id="@+id/image_female"
        android:layout_alignParentRight="true"
        android:layout_below="@id/image_male"
        android:src="@mipmap/pp_girl_png"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/save_Button_gender"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/input_layout_password"
        android:layout_marginTop="40dp"
        android:text="SAVE" />

</RelativeLayout>